<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_size_50"
    android:background="@color/view_background_light">

    <ImageButton
        android:id="@+id/baseactivity_ib_return"
        android:layout_width="@dimen/view_size_50"
        android:layout_height="@dimen/view_size_50"
        android:layout_centerVertical="true"
        android:background="@color/background_transparent"
        android:src="@drawable/button_return_src" />

    <TextView
        android:id="@+id/baseactivity_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageButton
        android:id="@+id/baseactivity_ib_ok"
        android:layout_width="@dimen/view_size_50"
        android:layout_height="@dimen/view_size_50"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/background_transparent"
        android:src="@drawable/button_ok_src" />

</RelativeLayout>
