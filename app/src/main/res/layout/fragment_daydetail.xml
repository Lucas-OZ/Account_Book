<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/view_space_10">

    <TextView
        android:id="@+id/dayactivity_tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="@dimen/view_space_10"
        android:textSize="50sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_.5"
        android:background="@color/view_background_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_space_10"
            android:text="分类"
            android:textSize="20sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dayactivity_tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_.5"
        android:background="@color/view_background_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_space_10"
            android:text="账户"
            android:textSize="@dimen/view_size_20" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dayactivity_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/view_size_20" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_.5"
        android:background="@color/view_background_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dayactivity_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_space_10"
            android:textSize="@dimen/view_size_20" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dayactivity_tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/view_size_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/line_size_.5"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/view_background_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_space_10"
            android:text="备注"
            android:textSize="@dimen/view_size_20" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/line_size_.5"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/view_background_dark" />
    </LinearLayout>

    <TextView
        android:id="@+id/dayactivity_tv_other"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/view_space_10"
        android:textColor="@color/background_blue"
        android:textSize="@dimen/view_size_20" />

</LinearLayout>
