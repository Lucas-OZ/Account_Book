<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_activity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/mainactivity_fl_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/view_background_light">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/main_rb_main"
                style="@style/rbStyle"
                android:checked="true"
                android:drawableTop="@drawable/ic_main"
                android:text="首页" />

            <RadioButton
                android:id="@+id/main_rb_count"
                style="@style/rbStyle"
                android:drawableTop="@drawable/ic_count"
                android:text="账户" />

            <RadioButton
                android:id="@+id/main_rb_more"
                style="@style/rbStyle"
                android:drawableTop="@drawable/ic_more"
                android:text="更多" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>