<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_activity"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:id="@+id/recordin_ll_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_state"
        android:descendantFocusability="blocksDescendants"
        android:padding="@dimen/view_space_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"
            android:textSize="@dimen/font_size_20" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/record_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00"
            android:textColor="@color/text_out_color"
            android:textSize="@dimen/font_size_40" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_.5"
        android:background="@color/view_background_dark" />

    <LinearLayout
        android:id="@+id/recordin_ll_inorout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_state"
        android:descendantFocusability="blocksDescendants"
        android:padding="@dimen/view_space_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入/支出"
            android:textSize="@dimen/font_size_20" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/record_tv_inorout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_20" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_.5"
        android:background="@color/view_background_dark" />

    <LinearLayout
        android:id="@+id/record_ll_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_state"
        android:padding="@dimen/view_space_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:textSize="@dimen/font_size_20" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/record_tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="早午晚餐"
            android:textSize="@dimen/font_size_20" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_.5"
        android:background="@color/view_background_dark" />

    <LinearLayout
        android:id="@+id/record_ll_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_state"
        android:padding="@dimen/view_space_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户"
            android:textSize="@dimen/font_size_20" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/record_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_20" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_.5"
        android:background="@color/view_background_dark" />

    <LinearLayout
        android:id="@+id/record_ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_state"
        android:padding="@dimen/view_space_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textSize="@dimen/font_size_20" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/record_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_20" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_.5"
        android:background="@color/view_background_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_space_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textSize="@dimen/font_size_20" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_20" />
    </LinearLayout>

    <EditText
        android:id="@+id/record_et_note"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/view_space_10"
        android:layout_weight="1"
        android:background="@drawable/edit_style"
        android:gravity="top"
        android:maxLength="60"
        android:padding="@dimen/view_space_10"
        android:textColor="@color/background_blue"
        android:textSize="@dimen/font_size_20" />

    <RelativeLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
